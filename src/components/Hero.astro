---
interface Props {
  title: string;
  subtitle?: string;
  cta?: { label: string; href: string };
  backgroundImage?: string;
  backgroundImageWebp?: string;
  compact?: boolean;
}

const { title, subtitle, cta, backgroundImage, backgroundImageWebp, compact = false } = Astro.props;
---

<section class:list={['hero', { 'hero--compact': compact }]}>
  {backgroundImage && (
    <picture>
      {backgroundImageWebp && <source srcset={backgroundImageWebp} type="image/webp" />}
      <img src={backgroundImage} alt="" class="hero__bg" loading="eager" />
    </picture>
  )}
  <div class="hero__overlay"></div>
  <div class="hero__content container">
    <h1 class="hero__title">{title}</h1>
    <div class="hero__divider"></div>
    {subtitle && <p class="hero__subtitle">{subtitle}</p>}
    {cta && <a href={cta.href} class="btn hero__cta">{cta.label}</a>}
  </div>
  {!compact && (
    <button class="hero__scroll" aria-label="Przewiń niżej">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </button>
  )}
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #3a3a3a;
    color: #fff;
    text-align: center;
    overflow: hidden;
  }

  .hero--compact {
    height: 50vh;
  }

  .hero picture {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .hero__bg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
  }

  .hero__content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .hero__title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 0;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 6px;
  }

  .hero__divider {
    width: 480px;
    height: 2px;
    background: rgba(255, 255, 255, 0.7);
    margin: 20px auto;
  }

  .hero__subtitle {
    font-size: 1.2rem;
    line-height: 1.7;
    margin-bottom: 32px;
    color: rgba(255, 255, 255, 0.9);
  }

  .hero__cta {
    font-size: 1rem;
    padding: 16px 40px;
    background: #fff;
    color: var(--color-accent);
  }

  .hero__cta:hover {
    background: rgba(255, 255, 255, 0.9);
  }

  .hero__scroll {
    position: absolute;
    bottom: 100px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    color: #fff;
    cursor: pointer;
    transition: border-color 0.3s ease, background 0.3s ease;
    animation: hero-bounce 2s ease infinite;
  }

  .hero__scroll:hover {
    border-color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }

  @keyframes hero-bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(8px); }
  }

  @media (max-width: 768px) {
    .hero__title {
      font-size: 2.5rem;
      letter-spacing: 3px;
    }

    .hero__subtitle {
      font-size: 1rem;
    }

    .hero--compact {
      height: 40vh;
    }
  }
</style>

<script>
  document.querySelector('.hero__scroll')?.addEventListener('click', () => {
    window.scrollTo({ top: window.innerHeight, behavior: 'smooth' });
  });
</script>
