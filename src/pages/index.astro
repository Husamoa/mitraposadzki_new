    reverse
  />

  <ServiceSection
    title="Żywica epoksydowa"
    description="Coraz popularniejsze wykończenie posadzki w garażu, ze względu na walory estetyczne i łatwość użytkowania. Wysoka wytrzymałość na obciążenia, odporność na oleje i chemikalia, oraz bezspoinowa powierzchnia łatwa w utrzymaniu czystości."
    images={[
      "/images/zywica/1.jpg",
      "/images/zywica/3.jpg",
      "/images/zywica/4.jpg",
      "/images/zywica/5.jpg",
      "/images/zywica/6.jpg",
    ]}
    href="/zywica-epoksydowa"
  />

  <!-- CTA -->
  <section class="section cta-section">
    <div class="container" style="text-align:center;" data-animate="from-bottom">
      <h2 class="section__title">Zachęcamy do kontaktu</h2>
      <p style="max-width:600px; margin:0 auto 32px; color:var(--color-text-light);">
        Skontaktuj się z nami, aby omówić Twój projekt. Bezpłatna wycena i doradztwo.
      </p>
      <a href="/kontakt" class="btn">Napisz do nas</a>
    </div>
  </section>

  <div class="gradient-to-dark"></div>

</BaseLayout>

<style>
  .gradient-from-dark {
    height: 200px;
    background: linear-gradient(180deg, #1a1a1a 0%, #BEBEBE 30%, #FFFFFF 100%);
  }

  .gradient-to-dark {
    height: 200px;
    background: linear-gradient(180deg, #FFFFFF 0%, #1a1a1a 100%);
  }

  @media (max-width: 768px) {
    .gradient-from-dark {
      height: 120px;
    }

    .gradient-to-dark {
      height: 120px;
    }
  }
</style>
