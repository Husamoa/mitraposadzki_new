---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="Kontakt">

  <Hero
    title="Kontakt"
    subtitle="Skontaktuj się z nami, aby omówić Twój projekt. Chętnie odpowiemy na wszystkie pytania."
    compact
  />

  <section class="section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Dane kontaktowe</h2>

          <div class="contact-item">
            <h4>Telefon</h4>
            <a href="tel:+48000000000">+48 000 000 000</a>
          </div>

          <div class="contact-item">
            <h4>Email</h4>
            <a href="mailto:kontakt@mitraposadzki.pl">kontakt@mitraposadzki.pl</a>
          </div>

          <div class="contact-item">
            <h4>Adres</h4>
            <p>ul. Przykładowa 10<br />00-000 Miasto</p>
          </div>

          <div class="contact-item">
            <h4>Godziny pracy</h4>
            <p>Pon - Pt: 8:00 - 17:00<br />Sob: 9:00 - 13:00</p>
          </div>
        </div>

        <form class="contact-form" action="#" method="POST">
          <h2>Napisz do nas</h2>
          <div class="form-group">
            <label for="name">Imię i nazwisko</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="phone">Telefon</label>
            <input type="tel" id="phone" name="phone" />
          </div>
          <div class="form-group">
            <label for="message">Wiadomość</label>
            <textarea id="message" name="message" rows="5" required></textarea>
          </div>
          <button type="submit" class="btn">Wyślij wiadomość</button>
        </form>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 64px;
    align-items: start;
  }

  .contact-info h2,
  .contact-form h2 {
    font-size: 1.8rem;
    margin-bottom: 32px;
  }

  .contact-item {
    margin-bottom: 24px;
  }

  .contact-item h4 {
    font-family: var(--font-main);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-text-light);
    margin-bottom: 6px;
  }

  .contact-item a,
  .contact-item p {
    font-size: 1.05rem;
    line-height: 1.6;
  }

  .contact-item a:hover {
    text-decoration: underline;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 6px;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--color-border);
    font-family: var(--font-main);
    font-size: 0.95rem;
    transition: border-color 0.3s ease;
    outline: none;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    border-color: var(--color-accent);
  }

  .form-group textarea {
    resize: vertical;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
</style>
